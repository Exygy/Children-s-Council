.row.c-base.margin-bottom-2 ng-if="$ctrl.data.providers.length"
  .small-6.columns
    small
      span Sort by:
      span.margin-left-small
        em ng-hide="settings.locationType == 'address' && filters.address" Random
        em ng-show="settings.locationType == 'address' && filters.address" Distance
        span.fa.fa-info-circle.margin-left-small.tip-top ng-hide="settings.locationType == 'address' && filters.address" data-width="350" tooltip="Why random? Children's Council is non-profit organization and acts in the best interest of families and the public. The results below are based on your search criteria, but listed randomly to give providers equal treatment." tooltip-placement="right"
        span.fa.fa-info-circle.margin-left-small.tip-top ng-show="settings.locationType == 'address' && filters.address" data-width="350" tooltip="These results are ordered by the provider's distance from your search address, with the closest providers listed first." tooltip-placement="right"

  .small-6.columns.text-right
    small
      ' Showing
      strong
        ' {{ number }} - {{ numberOfElements }}
      ' of {{ totalElements }} results

.loading ng-show="$ctrl.data.isLoading"

div ng-hide="$ctrl.data.isLoading"

  ul.no-bullet.no-result ng-if="!$ctrl.data.providers.length"
    li.results-item.c-base
      h2 No child care provider matches found.
      p Try changing filters for a less specific search.

  provider-map providers="$ctrl.data.providers" info-window="true"

  results-pager current-page="$ctrl.data.currentPage" is-first-page="$ctrl.data.isFirstPage" is-last-page="$ctrl.data.isLastPage" page-size="$ctrl.data.pageSize" ng-if="$ctrl.data.providers.length"
