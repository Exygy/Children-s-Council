css:
    #ccr-scope .covid-banner-wrapper {
        border: solid 9px #C5D82E;
        border-radius: 34px;
        min-height:320px;
        margin-top:20px;
        margin-bottom:30px;
        padding:35px 10px 35px 35px;
        width:118%;
    }

    #ccr-scope .covid-banner-content {
        float:left;
        width:50%;
    }

    #ccr-scope .covid-banner-content h4 { 
        color:#333333;
        font-size:24px;
        font-weight:bold;
        margin-bottom:19px;
        text-transform: inherit;
    }

    #ccr-scope .covid-banner-content p { 
        color:#333333;
        font-size:16px;
        padding-right:65px;
    }

    #ccr-scope .covid-banner-image {
        float:left;
        padding-top:30px;
        width:50%;
    }

    @media only screen and (max-width: 600px) {
        #ccr-scope .covid-banner-wrapper, #ccr-scope .covid-banner-content, #ccr-scope .covid-banner-image {
            float:none;
            width: 100%;
        }
    }



.covid-banner-wrapper
    .covid-banner-content
        h4 Only childcare programs open during COVID-19 are displayed below.
    .covid-banner-image
        img src="http://www.childrenscouncil.org/wp-content/uploads/cc_child-playing.png"