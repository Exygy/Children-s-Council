css:
    #ccr-scope .covid-banner-wrapper {
        border: solid 9px #C5D82E;
        border-radius: 34px;
        min-height:240px;
        margin-top:20px;
        margin-bottom:30px;
        padding: 0 0 0 15px;
    }

    #ccr-scope .covid-banner-content {
        float:left;
        padding-top: 35px;
        width:50%;
    }

    #ccr-scope .covid-banner-content h4 { 
        color:#333333;
        font-size:24px;
        font-weight:bold;
        line-height: 40px;
        margin-bottom:19px;
        text-transform: inherit;
    }

    #ccr-scope badge {
        float: left;
        margin-top: -3px;
        padding-right: 25px;
    }

    #ccr-scope badge img {
        background-color: transparent;
    }

    #ccr-scope .covid-banner-image {
        border-radius: 30px;
        float:left;
        width:50%;
    }

    #ccr-scope .covid-banner-image img {
        border-radius: 30px;
    }

    @media only screen and (max-width: 600px) {
        #ccr-scope .covid-banner-content, #ccr-scope .covid-banner-image {
            float:none;
            width:100%;
        }
    }

.covid-banner-wrapper
    .covid-banner-content
        h4 Only childcare programs open during COVID-19 are displayed below.
        badge name="'COVID19 Open to Essential Workers'"
        p Programs with this badge have participated in a COVID-19 health and safety training.
    .covid-banner-image
        img src="http://www.childrenscouncil.org/wp-content/uploads/cc_child-playing.png"