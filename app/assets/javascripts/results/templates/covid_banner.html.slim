css:
  .provider-covid-banner {
    color: #666666;
    display: inline-block;
    font-family: 'BentonSans Bold';
    font-size: 14px;
    letter-spacing: 0.4px;
    line-height: 22px;
    padding: 18px 19px 15px 50px; 
  }

  .provider-covid-banner .title {
    font-family: 'BentonSans Bold';
    padding-bottom: 10px;
    text-transform: uppercase;          
  }

  .provider-covid-banner p.description {
      float:left;
      width: 85%;
  }

  .provider-covid-banner badge {
      float:left
  }

  .provider-covid-banner badge img { 
      background-color: transparent !important;
      height: 31px;
      width: 31px;
  }

  .provider-covid-banner.open {
    background-color:#F9FFD9;
    border:solid 2px #ADC42D;

  }

  .provider-covid-banner i.fa {
    float: left;
    font-size: 20px;
    left: 20px;
    position: absolute;
  }

  .provider-covid-banner i.fa.fa-exclamation-circle { 
    color:#ADC42D;
  }

  @media print {
    .provider-covid-banner i.fa.fa-exclamation-circle {
      margin-left: 20px !important;
    }
    .provider-covid-banner badge {
      margin-left: 30px !important;
    }
  }

.provider-covid-banner ng-if="covid19ProvidersOnly" style="padding:0"
  .provider-covid-banner.open
    i.fa.fa-exclamation-circle aria-hidden="true"
    .title Only child care programs open during Covid-19 are displayed below.
    p.description 
      | Programs with this badge have participated in a COVID-19 health
      br
      | and safety training.
    badge style="padding-top:14px;" name="'DPH Training Complete'" 


