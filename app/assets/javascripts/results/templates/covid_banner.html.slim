css:
  .provider-covid-banner {
    color: #666666;
    display: inline-block;
    font-family: 'BentonSans Bold';
    font-size: 14px;
    letter-spacing: 0.4px;
    line-height: 22px;
    padding: 18px 19px 15px 50px; 
  }

  .provider-covid-banner span.title {
    text-transform: uppercase;          
  }

  .provider-covid-banner.open {
    background-color:#F9FFD9;
    border:solid 2px #ADC42D;

  }

  .provider-covid-banner i.fa {
    float: left;
    font-size: 20px;
    left: 20px;
    position: absolute;
  }

  .provider-covid-banner i.fa.fa-exclamation-circle { 
    color:#ADC42D;
  }


.provider-covid-banner ng-if="covid19ProvidersOnly" style="padding:0"
    .provider-covid-banner.open
        i.fa.fa-exclamation-circle aria-hidden="true"
        span.title All child care programs displayed are open during COVID-19
        p Look for programs with the COVID-19 Safety badge indicating participation in a COVID-19 health and safety training.
        badge name="'DPH Training Complete'" 


