css:
  a.round.blue-filter-search-button {
    background-color: #FFFFFF;
    border: 2px solid #2794b3;    
    color: #2794b3;
    font-family: "BentonSans Bold";
  }

  a.round.blue-filter-search-button.inverted {
    background-color: #2794b3;
    border: 2px solid #2794b3;    
    color: #FFFFFF;
  }

  a.round.blue-filter-search-button.inverted {
   width: 200px; 
  }

  a.round.button.text-uppercase.margin-right-2.blue-filter-search-button {
    margin-right: 0 !important;
    width: 200px; 
  }

  a.round.button.text-uppercase.margin-right-2.blue-filter-search-button.inverted {
    margin-right: 20px !important;
  }

  @media only screen and (max-width: 40em) {
    a.round.button.text-uppercase.margin-right-2.blue-filter-search-button {
      padding: 20px 1rem 17px;
      width: 110px; 
    }
    a.round.button.text-uppercase.margin-right-2.blue-filter-search-button.inverted {
      margin-right: 10px !important;
      padding: 20px 1rem 17px;
      width: 180px; 
      margin-bottom: 20px !important;
    }
  }

.ccr-scope.filters-modal
  .row
    .columns.medium-12
      h2 All Filters
      small All filters are optional.
      span ng-controller="SearchController"
        span ng-include="'search/filters/extra_filters.html'"

        a.round.button.text-uppercase.margin-right-2.blue-filter-search-button.inverted ng-click="postSearch()" Apply Filters
        a.round.button.text-uppercase.margin-right-2.blue-filter-search-button ng-click="cancel()" Cancel
