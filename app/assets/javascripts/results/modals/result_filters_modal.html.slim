css:
  input[type="submit"].round.blue-filter-search-button,
  .round.blue-filter-search-button {
    background-color: #FFFFFF;
    border: 2px solid #2794b3;    
    color: #2794b3;
    font-family: "BentonSans Bold";
  }

  input[type="submit"].round.blue-filter-search-button.inverted,
  .round.blue-filter-search-button.inverted {
    background-color: #2794b3;
    border: 2px solid #2794b3;    
    color: #FFFFFF;
  }

  input[type="submit"].round.blue-filter-search-button.inverted {
   width: 200px; 
  }

  a.round.button.text-uppercase.margin-right-2.blue-filter-search-button {
    margin-right: 0 !important;
    width: 200px; 
  }

  @media only screen and (max-width: 40em) {
    input[type="submit"].round.blue-filter-search-button.inverted {
      margin-right: 20px !important;
      width: 180px; 
    }
    a.round.button.text-uppercase.margin-right-2.blue-filter-search-button {
      width: 120px; 
    }
  }

.ccr-scope.filters-modal
  .row
    .columns.medium-12
      h2 All Filters
      small All filters are optional.
      span ng-controller="SearchController"
        span ng-include="'search/filters/extra_filters.html'"

        input.round.button.text-uppercase.margin-right-2.blue-filter-search-button.inverted type="submit" value="Apply Filters" ng-click="postSearch()"
        a.round.button.text-uppercase.margin-right-2.blue-filter-search-button ng-click="cancel()" Close
