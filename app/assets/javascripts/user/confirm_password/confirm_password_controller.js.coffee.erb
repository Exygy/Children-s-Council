ConfirmPasswordController = ($scope, $modalInstance) ->
  $ctrl = @

  $scope.confirmPassword = (currentPassword) ->
    $modalInstance.close({password: currentPassword})

  $scope.openForgotPassword = () ->
    $modalInstance.close()
    $modal.open {
      controller: 'userForgotPasswordCtrl',
      templateUrl: 'user/forgot_password/forgot_password.html',
    }

  $scope.close = ->
    $modalInstance.close();

  return $ctrl

ConfirmPasswordController.$inject = ['$scope', '$modalInstance']

angular
  .module('CCR')
  .controller('userConfirmPasswordCtrl', ConfirmPasswordController)
