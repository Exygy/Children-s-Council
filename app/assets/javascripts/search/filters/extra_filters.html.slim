css:
  .checkbox input.checkboxInput:checked + span:before {
      color: #2794b3;
      content: "\f00c";
      font-family: "FontAwesome";
      position: absolute;
      left: -18px;
      top: -2px;
  }

  .radio input.radioInput {
    display:none;
  }

  .radio label::before {
    height: 19px;
    margin-top: 1px;
    width: 19px;
  }

  .radio input.radioInput:checked + span:before {
    color: #2794b3;
    content: "\f111";
    font-family: "FontAwesome";
    position: absolute;
    left: -16px;
    top: 1px;
    font-size: 13px;
  }

section.margin-top-2
  h5 Average Rate Range
  .row
    .columns.small-6.medium-2
      input type="text" name="preschool-program" ng-model="filters.monthlyRate[0]" placeholder="Min"
    .columns.small-6.medium-2 style="float:left"
      input type="text" name="preschool-program" ng-model="filters.monthlyRate[1]" placeholder="Max"

section.margin-top-2
  h5 Financial Assistance  
  div.header-info
    a.small href="http://www.childrenscouncil.org/families/help-paying-for-child-care/" target="_blank"
      | Check if you qualify
  
  .row
    .columns.medium-6 style="float:left" ng-repeat="type in filterData.financialAssistance"
      .checkbox
        label for="financial-assistance-{{type}}"
          input.checkboxInput type="checkbox" id="financial-assistance-{{type}}" name="financial-assistance" checklist-value="type.value" checklist-model="filters.financialAssistance"
          span.icon
          .label
            | {{ type.label }}

section.margin-top-2
  h5 Immediate Openings
  .row
    .columns.medium-6 style="float:left" ng-repeat="type in filterData.vacancyTypes"
      .checkbox
        label for="vacancy-type-{{type}}"
          input.checkboxInput type="checkbox" id="vacancy-type-{{type}}" name="vacancy-type" checklist-value="type" checklist-model="filters.vacancyType" ng-change="vacancyTypeAdapter()"
          span.icon
          .label
            | {{ type }}

section.margin-top-2
  h5 Preschool
  .row
    .columns.medium-6
      .checkbox
        label for="preschool-program"
          input.checkboxInput type="checkbox" id="preschool-program" name="preschool-program" ng-model="filters.preschoolProgram"
          span.icon
          .label
            | Preschool Program

section.margin-top-2
  h5 Child Care Program Type
  .row
    .columns.medium-6 style="float:left" ng-repeat="type in filterData.typesOfCare"
      .checkbox
        label for="care-type-{{type}}"
          input.checkboxInput type="checkbox" id="care-type-{{type}}" name="care-type" checklist-value="type" checklist-model="filters.typesOfCare"
          span.icon
          .label
            | {{ type }}

section.margin-top-2
  h5 Other Schedule Options
  .row
    .columns.medium-6 style="float:left" ng-repeat="type in filterData.shiftFeatures" ng-show="$index < 4 || ($index >= 4 && showMoreOtherScheduleOptions)"
      .checkbox
        label for="shift-feature-{{type.name}}"
          input.checkboxInput type="checkbox" id="shift-feature-{{type.name}}" name="shift-feature" checklist-value="type.name" checklist-model="filters.typesOfCare"
          span.icon
          .label
            | {{ type.name }}
  br
  a ng-click="showMoreOtherScheduleOptions = !showMoreOtherScheduleOptions" 
    | See More Options
    i class="fa" ng-class="{ 'fa-chevron-down': !showMoreOtherScheduleOptions, 'fa-chevron-up': showMoreOtherScheduleOptions }" aria-hidden="true" style="margin-left:4px;"


section.margin-top-2
  h5 School Schedule
  .row
    .columns.medium-6 style="float:left" ng-repeat="type in filterData.yearlySchedules"
      .radio
        label for="year-schedule-{{type.label}}"
          input.radioInput type="radio" id="year-schedule-{{type.label}}" name="year-schedule" checklist-value="type.value" checklist-model="filters.yearlySchedules"
          span.icon
          .label
            | {{ type.label }}

section.margin-top-2
  h5 Meals Included
  .row
    .columns.medium-6 style="float:left" ng-repeat="type in filterData.meals"
      .radio
        label for="meals-included-{{type.label}}"
          input.radioInput type="radio" id="meals-included-{{type.label}}" name="meals-included" checklist-value="type.value" checklist-model="filters.meals"
          span.icon
          .label
            | {{ type.label }}

section.margin-top-2
  h5 Other
  .row
    .columns
      .checkbox
        label for="parent-coop"
          input.checkboxInput type="checkbox" id="parent-coop" name="parent-coop" ng-model="filters.parentCoop"
          span.icon
          .label
            | Parent Co-op
  .row
    .columns
      .checkbox
        label for="potty-training"
          input.checkboxInput type="checkbox" id="potty-training" name="potty-training" ng-model="filters.pottyTraining"
          span.icon
          .label
            | Potty Training Support

section.margin-top-2
  h5 Teaching Philosophy
  .row
    .columns.medium-6 style="float:left" ng-repeat="careApproach in (filterData.careApproaches | orderBy) track by $index" ng-show="$index < 4 || ($index >= 4 && showMoreCareApproach)"
      .checkbox
        label for="care-approaches-{{$index}}"
          input.checkboxInput type="checkbox" id="care-approaches-{{$index}}" name="care-approaches-{{$index}}" checklist-value="careApproach" checklist-model="filters.careApproaches"
          span.icon
          .label
            | {{ careApproach }}

  br
  a ng-click="showMoreCareApproach = !showMoreCareApproach" 
    | See More Options
    i class="fa" ng-class="{ 'fa-chevron-down': !showMoreCareApproach, 'fa-chevron-up': showMoreCareApproach }" aria-hidden="true" style="margin-left:4px;"


section.margin-top-2
  h5 Language Immersion Programs
  .row
    .columns.medium-6 style="float:left" ng-repeat="languageProgram in (filterData.languageImmersionPrograms | orderBy) track by $index" ng-show="$index < 4 || ($index >= 4 && showMoreLanguageProgram)"
      .checkbox
        label for="language-program-{{$index}}"
          input.checkboxInput type="checkbox" id="language-program-{{$index}}" name="language-program-{{$index}}" checklist-value="languageProgram" checklist-model="filters.attributesLocal3"
          span.icon
          .label
            | {{ languageProgram }}
  br
  a ng-click="showMoreLanguageProgram = !showMoreLanguageProgram" 
    | See More Options
    i class="fa" ng-class="{ 'fa-chevron-down': !showMoreLanguageProgram, 'fa-chevron-up': showMoreLanguageProgram }" aria-hidden="true" style="margin-left:4px;"

section.margin-top-2
  h6.text-normal.margin-top-2 Languages Spoken
  .repeater-container ng-repeat="language in filters.languages track by $index"
    select.radius id="language-id-{{$index + 1}}" name="language_id_{{$index + 1}}" ng-model="filters.languages[$index]"
      option value="" Select Language
      option ng-repeat="language in filterData.languages track by $index" value="{{ language }}"
        ' {{ language }}
    button.inline.repeater type="button" aria-label="Remove spoken language" ng-show="$index > 0" ng-click="removeItem(filters.languages, $index)" Remove
  button.inline type="button" aria-label="Add another Spoken Language" ng-show="hasFinalValue(filters.languages) && filters.languages.length < 3" ng-click="addItem(filters.languages)" Add another

section.margin-top-2
  h5 Religious Program
  .row
    .columns.medium-6 style="float:left"
      .checkbox ng-repeat="religiousProgram in (filterData.religiousPrograms | orderBy) track by $index"
        label for="religious-program-{{$index}}"
          input.checkboxInput type="checkbox" id="religious-program-{{$index}}" name="religious-program-{{$index}}" checklist-value="religiousProgram" checklist-model="filters.religiousPrograms[0]"
          span.icon
          .label
            | {{ religiousProgram }}

