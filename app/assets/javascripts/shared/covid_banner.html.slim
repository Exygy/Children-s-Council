css:
    .covid-banner-wrapper {
        border: solid 9px #C5D82E;
        border-radius: 34px;
        height:320px;
        margin-bottom:30px;
        padding:35px 10px 35px 35px;
        width:118%;
    }

    .covid-banner-content {
        float:left;
        width:50%;
    }

    .covid-banner-content h4 { 
        color:#333333
        font-size:24px;
        font-weight:bold;
        margin-bottom:19px;
        text-transform: inherit;
    }

    .covid-banner-content p { 
        color:#333333;
        font-size:16px;
        padding-right:65px;
    }

    .covid-banner-image {
        float:left;
        padding-top:30px;
        width:50%;
    }

    @media only screen and (max-width: 600px) {
        .covid-banner-wrapper {
            width:100%;
        }
        .covid-banner-content {
            width:100%;
        }
        .covid-banner-image {
            width:100%;
        }
    }



